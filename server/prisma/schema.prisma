generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String     @id @default(cuid()) @map("_id")
  email    String     @unique
  name     String?
  password String?
  role     String
  chats    ChatUser[]
}

model Chat {
  id       String     @id @default(cuid()) @map("_id")
  messages Message[]
  users    ChatUser[]
}

model ChatUser {
  id     String @id @default(cuid()) @map("_id")
  userId String
  chatId String
  user   User   @relation(fields: [userId], references: [id])
  chat   Chat   @relation(fields: [chatId], references: [id])

  @@unique([userId, chatId])
}

model Message {
  id     String @id @default(cuid()) @map("_id")
  text   String
  chatId String
  chat   Chat   @relation(fields: [chatId], references: [id])
}
